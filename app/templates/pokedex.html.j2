{% extends 'base.html.j2' %}
{% block title %}
    Pokédex
{% endblock %}

{% block content %}

    <h1>Pokédex</h1>
    <form action="{{url_for('pokedex')}}", method="POST">
       {{form.hidden_tag()}}
       <div>
       {{ form.pokemon_name.label(class="form-label") }}
       {{ form.pokemon_name(class="form-control")}}
       {% for error in form.pokemon_name.errors%}
        <small style="color:red"> {{ error }}</small>
       {% endfor%}
       </div>
       <br />
       <div>
       {{ form.submit(class="btn btn-danger") }}
       <hr />
       </div>
    </form>
    {% if pokemon %}
    <table class="table table-striped table-hover table-danger">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Base Experience</th>
      <th scope="col">Image</th>
      <th scope="col">Ability</th>
      <th scope="col">HP</th>
      <th scope="col">Attack</th>
      <th scope="col">Defense</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">{{ pokemon.name }}</th>
      <td>{{ pokemon.bexp }}</td>
      <td>{{ pokemon.shiny }}</td>
      <td>{{ pokemon.ability }}</td>
      <td>{{ pokemon.hp }}</td>
      <td>{{ pokemon.attack }}</td>
      <td>{{ pokemon.defense }}</td>
    </tr> 
  </tbody>
</table>
{% endif %}

{% endblock %}
