{% extends 'base.html.j2' %}
{% block title %}
    Your Pokédex
{% endblock %}

{% block content %}

    <h1>Pokédex</h1>
    <form action="/pokedex", method="POST">
        <div class="mb-3">
            <label for="pokemonName" class="form-label">Pokémon Name</label>
            <input type="pokemon" name="pokemon_name" class="form-control" id="pokemonNameInput" aria-describedby="pokemon_name">
            <div style="color:red"><small>{{ error }}</small></div>
            <button type="submit" class="btn btn-danger">Submit</button>
        </div>
    </form>
    <table class="table table-striped table-hover table-danger">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Base Experience</th>
      <th scope="col">Image</th>
      <th scope="col">Ability</th>
      <th scope="col">HP</th>
      <th scope="col">Attack</th>
      <th scope="col">Defense</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <th scope="row">{{ pokemon.name }}</th>
      <td>{{ pokemon.bexp }}</td>
      <td>{{ pokemon.shiny }}</td>
      <td>{{ pokemon.ability }}</td>
      <td>{{ pokemon.hp }}</td>
      <td>{{ pokemon.attack }}</td>
      <td>{{ pokemon.defense }}</td>
    </tr> 
  </tbody>
</table>

{% endblock %}
